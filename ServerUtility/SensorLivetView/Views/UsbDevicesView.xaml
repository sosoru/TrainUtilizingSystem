<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:SensorLivetView_ViewModels_Controls="clr-namespace:SensorLivetView.ViewModels.Controls"
	mc:Ignorable="d"
	x:Class="SensorLivetView.UsbDevicesView"
	x:Name="UserControl"
	d:DesignWidth="640" d:DesignHeight="480">
	<UserControl.Resources>
		<SensorLivetView_ViewModels_Controls:UsbRegistryConverter x:Key="UsbRegistryConverter"/>
		<DataTemplate x:Key="UsbRegTemplate">
			<Border>
				<Grid>
					<TextBlock/>
				</Grid>
			</Border>
		</DataTemplate>
	</UserControl.Resources>

	<Grid x:Name="LayoutRoot">
		<DockPanel>
			<StackPanel DockPanel.Dock="Top">
			<Button Content="更新" Command="{Binding RefreshCommand}"/>
				
			</StackPanel>
			
		<StackPanel>
			<ListBox ItemsSource="{Binding DeviceCandicates, Mode=OneWay}" SelectedItem="{Binding SelectedDeviceReg, Mode=TwoWay}" SelectedValuePath="FullName" ItemTemplate="{DynamicResource UsbRegTemplate}"/>
		</StackPanel>
			
		</DockPanel>
	</Grid>
</UserControl>