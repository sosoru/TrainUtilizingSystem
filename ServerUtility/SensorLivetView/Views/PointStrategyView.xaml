<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="SensorLivetView.PointStrategyView"
	x:Name="UserControl"
	d:DesignWidth="500" d:DesignHeight="50">

    <Grid x:Name="LayoutRoot">
        <StackPanel Orientation="Horizontal">
            <Label Width="100"  Content="{Binding StrategyName}" />
            <ToggleButton Content="Straight" Width="200"  IsEnabled="{Binding IsEnable}" IsChecked="{Binding IsStraight, Mode=TwoWay}" />
            <ToggleButton Content="Curve" Width="200"  IsEnabled="{Binding IsEnable}" IsChecked="{Binding IsCurved, Mode=TwoWay}" />
        </StackPanel>
    </Grid>
</UserControl>