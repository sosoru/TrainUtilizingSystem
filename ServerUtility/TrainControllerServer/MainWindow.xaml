<Window x:Class="TrainControllerServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TrainControllerServer"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <ListView x:Name="PortListView" SelectionChanged="PortListView_SelectionChanged" />
            <local:TrainSensorView x:Name="sensor" />  
            <local:MotherBoardView x:Name="board" />
        </StackPanel>
    </Grid>
</Window>
